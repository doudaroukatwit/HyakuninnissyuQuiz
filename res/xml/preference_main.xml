        android:defaultValue="モードなし"
        android:dialogTitle="Check Mode"
        android:entries="@array/modelist"
        android:entryValues="@array/modevalue"
        android:key="mode"
        android:summary="モードを選択"
        android:title="モード選択" />

    <CheckBoxPreference
        android:key="poemview"
